// Add pdf extention on files
$command = 'find $filePath -type f -not -name "*.*" -exec mv "{}" "{}".pdf \;';
system($command, $output);
-----------------------------------------------------------------------------------------------------------------------------
// Convert a file to pdf 
$command = 'unoconv --doctype=document --format=%s  -o %s %s';
$originFilePath = $filePath.$filename;
$outputDirPath = $filePath.$fileNameWithoutExt;  // this need file name without extention
$command = sprintf($command, 'pdf', $outputDirPath, $originFilePath);
system($command, $output);
